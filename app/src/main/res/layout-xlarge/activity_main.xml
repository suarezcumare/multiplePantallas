<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suarezcumare.myexamplemd.MainActivity"
    android:background="@drawable/marcianito_miprimer_proyecto_android"
    android:padding="@android:dimen/dialog_min_width_major">


    <Button
        android:text="@string/btn_entrar"
        android:textColor="@color/colorLetras"
        android:background="@drawable/btn_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="36sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:padding="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msj_bienvenido"
        android:textSize="50sp"
        android:id="@+id/textView"
        android:layout_marginLeft="252dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
